{% extends "admin_base.njk" %}
{% block titulo %}
    Comentarios | Lista
{% endblock %}
{% block contenido %}
    <h1>Lista de comentarios</h1>
    <table class="table table-hover col-12" id="tablaComentarios">
        {% for comentario in producto.comentarios %}
            <tr class="row active">
                <td class="col-2">
                    <h4>
                        {{ comentario.nombreUsuario }}
                    </h4>
                </td>
                <td class="col-8">
                    <p class="comentarioComent">
                        {{ comentario.comentario }}
                    </p>
                </td>
                <td class="col-2">
                    <form class="displayInline" action="/admin/comentarios/{{ producto.id }}/{{ comentario.id }}" method="post">
                        <input type="hidden" name="_method" value="delete"/>
                        <button type="submit" class="btn btn-danger">Borrar</button>
                    </form>
                </td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}